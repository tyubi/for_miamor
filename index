            object-fit: cover;
        }

        h1 { color: #d63384; font-size: 1.8rem; min-height: 60px; }

        .buttons {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            margin-top: 20px;
            height: 100px;
        }

        button {
            padding: 15px 25px;
            font-size: 1.2rem;
            border: none;
            border-radius: 12px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.2s ease;
        }

        /* The Glowing "Yes" Button */
        #yesBtn { 
            background-color: #ff69b4; 
            color: white; 
            z-index: 100;
            box-shadow: 0 0 15px #ff69b4;
            animation: pulse-glow 1.5s infinite;
        }

        @keyframes pulse-glow {
            0% { box-shadow: 0 0 5px #ff69b4; }
            50% { box-shadow: 0 0 25px #ff69b4; }
            100% { box-shadow: 0 0 5px #ff69b4; }
        }

        #noBtn { background-color: #a9a9a9; color: white; }

        .hidden { display: none; }
    </style>
