<body>

    <audio id="bgMusic" loop>
        <source src="https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3" type="audio/mpeg">
    </audio>

    <div class="container">
        <img id="cat-display" class="cat-img" src="https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNHJqZnlreXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3JmVwPXYxX2ludGVybmFsX2dpZl9ieV9pZCZjdD1n/MDJ9IbxxvDUQM/giphy.gif" alt="Cute Cat">
        <h1 id="main-text">Ally, will you be my Valentine? üåπ</h1>
        
        <div class="buttons">
            <button id="yesBtn" onclick="celebrate()">Yes!</button>
            <button id="noBtn" onclick="handleNo()">No</button>
        </div>
    </div>

    <script>
        let noClickCount = 0;
        let musicStarted = false;

        function startMusic() {
            if (!musicStarted) {
                const music = document.getElementById('bgMusic');
                music.play().catch(e => console.log("Audio play blocked until interaction"));
                musicStarted = true;
            }
        }

        const sadCats = [
            "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNHJqZnlreXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3JmVwPXYxX2ludGVybmFsX2dpZl9ieV9pZCZjdD1n/9Y5BbDSkSTiY8/giphy.gif",
            "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNXAwbG14Z3Rwdm52ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3JmVwPXYxX2ludGVybmFsX2dpZl9ieV9pZCZjdD1n/OPU6wUKARA3NTAD6T3/giphy.gif",
            "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3JmVwPXYxX2ludGVybmFsX2dpZl9ieV9pZCZjdD1n/7SF5scGB2AFrO/giphy.gif",
            "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3JmVwPXYxX2ludGVybmFsX2dpZl9ieV9pZCZjdD1n/26BRv0ThflsHCq_CQ/giphy.gif"
        ];

        const sadTexts = [
            "Lahhh pakipot yarnnn??? ü•∫",
            "Really? Di mo na naman ako love... üíî",
            "Allysa please... sige no more Nagi oh...",
            "Sigee, d na tayo uuwi samin! üò≠",
            "Gege lods. üì¶"
        ];

        function handleNo() {
            startMusic();
            const catImg = document.getElementById('cat-display');
            const mainText = document.getElementById('main-text');
            const yesBtn = document.getElementById('yesBtn');
            const noBtn = document.getElementById('noBtn');

            if (noClickCount < sadCats.length) {
                catImg.src = sadCats[noClickCount];
                mainText.innerText = sadTexts[noClickCount];
            } else {
                mainText.innerText = sadTexts[sadTexts.length - 1];
            }

            noClickCount++;
            const newYesSize = 1 + (noClickCount * 0.4);
            const newNoSize = 1 - (noClickCount * 0.1);
            
            yesBtn.style.transform = `scale(${newYesSize})`;
            if (newNoSize > 0.3) {
                noBtn.style.transform = `scale(${newNoSize})`;
            } else {
                noBtn.style.display = "none";
            }
        }

        function celebrate() {
            startMusic();
            const mainText = document.getElementById('main-text');
            const catImg = document.getElementById('cat-display');
            const buttons = document.querySelector('.buttons');

            mainText.innerText = "YAY! I KNEW YOU'D SAY YES! ‚ù§Ô∏è";
            catImg.src = "https://media.giphy.com/media/v1.Y2lkPTc5MGI3NjExNHJqZnlreXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3eXp4ZzR3JmVwPXYxX2ludGVybmFsX2dpZl9ieV9pZCZjdD1n/KztT2c4u8mYYUiMKdJ/giphy.gif";
            buttons.innerHTML = "<h2 style='color: #ff69b4;'>See you on the 14th, Loveyyyy! üêæ</h2>";

            for(let i=0; i<50; i++) {
                setTimeout(createHeart, i * 100);
            }
        }

        function createHeart() {
            const heart = document.createElement('div');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.position = 'fixed';
            heart.style.left = Math.random() * 100 + 'vw';
            heart.style.top = '100vh';
            heart.style.fontSize = (Math.random() * 20 + 20) + 'px';
            heart.style.zIndex = '1000';
            heart.style.transition = 'transform 3s linear, opacity 3s';
            document.body.appendChild(heart);

            setTimeout(() => {
                heart.style.transform = `translateY(-110vh) rotate(${Math.random() * 360}deg)`;
                heart.style.opacity = '0';
            }, 100);

            setTimeout(() => heart.remove(), 3500);
        }
    </script>
</body>
